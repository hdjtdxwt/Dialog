<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tc="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epsit.timercountdownview.TestActivity">

    <com.epsit.timercountdownview.ProgressView
        android:id="@+id/progressView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        tc:inner_text_size="20sp"
        tc:outer_layer_stroke_width="2dp"
        tc:outer_layer_stroke_color="@color/textHighLightColor"
        tc:outer_layer_solide_color="@android:color/transparent"
        tc:midlle_layer_progress_color="@color/triangleColor"
        tc:layout_constraintTop_toTopOf="parent"
        tc:shadow_layer_color="@android:color/transparent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        tc:layout_constraintLeft_toLeftOf="parent" />

    <com.epsit.timercountdownview.CompletedView
        android:id="@+id/tasks_view"
        android:layout_width="223dp"
        android:layout_height="223dp"
        tc:circleColor="@color/white"
        tc:radius="50dip"
        tc:totalProgress="40"
        tc:ringBgColor="@color/white2"
        tc:ringColor="@color/triangleColor"
        tc:strokeWidth="10dip"
        tc:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        tc:layout_constraintRight_toRightOf="parent" />
    <com.epsit.timercountdownview.CustomView
        android:id="@+id/CustomView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        tc:cv_circleColor="@color/white"
        tc:cv_textColor="@color/colorRed"
        tc:cv_radius="30dip"
        tc:cv_text_size="12dip"
        tc:cv_progress="40"
        tc:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        tc:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
